{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug PyTorch Distributed Training",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/opengait/main.py",
            "args": [
                "--cfgs",
                "configs/gaitset/gaitset.yaml",
                "--phase",
                "train"
            ],
            "console": "integratedTerminal",
            "env": {
                "CUDA_VISIBLE_DEVICES": "0,1"
            },
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceFolder}",
            "python": "/opt/homebrew/bin/python3",  // Update with the path to your virtual environment's python interpreter
            "stopOnEntry": false,
            "debugOptions": [
                "RedirectOutput"
            ],
            "externalConsole": false,
            "preLaunchTask": null
        }
    ]
}
